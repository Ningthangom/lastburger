 <div class="container parent-container">
    <div class="row justity-content-center">
        <h1> Eat da Burgers !!</h1>
    </div>
    <div class="row justify-content-center">
        <h2> Please Enter what you'd like to order</h2>
        <form class="order-form justify-content-center input-group">
            <label for = "burger_name"></label>
            <input type="text" id="newbuger" placeholder="chicken schnitzel burger">
            <div class="input-group-append">
                <button type="submit" class="btn order-btn">order</button>
            </div>
        </form>
    </div>
    <div class="row justify-content-center text-center ">
        <div class="notyet-devoured-container">
            <h3>Burgers to be devoured</h3>
            <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/notyet-devoured devoured = true}}
                    {{/unless}}
                    {{/each}}
            </ul>
        </div>
        <div class="devoured-container">
            <h3>Burgers Devoured</h3>
            <ul>
                 {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devoured devoured = false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

 </div>